<Defs>
  <ThingDef Name="FLG_FlagBase" ParentName="BuildingBase" Abstract="True">
    <thingClass>CuproFlags.Building_Flag</thingClass>
    <description>A decorative flag for marking areas or displaying heraldry.</description>
    <graphicData>
      <texPath>Cupro/Object/Utility/Flags/White/MenuIcon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <size>(1,1)</size>
    <altitudeLayer>PawnUnused</altitudeLayer>
    <socialPropernessMatters>true</socialPropernessMatters>
    <uiIconScale>0.7</uiIconScale>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <WorkToBuild>500</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Beauty>20</Beauty>
      <JoyGainFactor>1</JoyGainFactor>
    </statBases>
    <drawerType>MapMeshAndRealTime</drawerType>
    <fillPercent>0.15</fillPercent>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <watchBuildingStandDistanceRange>
        <min>1</min>
        <max>5</max>
      </watchBuildingStandDistanceRange>
      <watchBuildingStandRectWidth>3</watchBuildingStandRectWidth>
    </building>
    <designationCategory>Flags</designationCategory>
    <rotatable>false</rotatable>
    <tickerType>Normal</tickerType>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
  </ThingDef>
  <ThingDef Name="FLG_UndyedFlagBase" ParentName="FLG_FlagBase" Abstract="True">
